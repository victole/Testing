<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- dbConnectionProperties -->
	<bean
		class="com.despegar.framework.spring.properties.PropertyConfigurerDescriptor">
		<property name="applicationResources">
			<list>
				<value>classpath:conf/app/db-connection.properties</value>
			</list>
		</property>
		<property name="environmentResources">
			<list>
				<value>classpath:conf/env/db-connection.properties</value>
			</list>
		</property>
	</bean>

	<!-- dextRecordDataSource -->
	<bean id="sobekDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		lazy-init="true" destroy-method="close">
		<property name="driverClass" value="${sobek.dataSource.driverClassName}" />
		<property name="jdbcUrl" value="${sobek.dataSource.url}" />
		<property name="user" value="${sobek.dataSource.username}" />
		<property name="password" value="${sobek.dataSource.password}" />
		<property name="minPoolSize" value="${sobek.dataSource.minPoolSize}" />
		<property name="maxPoolSize" value="${sobek.dataSource.maxPoolSize}" />
		<property name="checkoutTimeout" value="${sobek.dataSource.checkoutTimeout}" />
		<property name="maxStatements" value="${sobek.dataSource.maxStatements}" />
		<property name="initialPoolSize" value="${sobek.dataSource.minPoolSize}" />
		<property name="idleConnectionTestPeriod" value="${sobek.dataSource.idleConnectionTestPeriod}" />
		<property name="preferredTestQuery" value="${sobek.dataSource.preferredTestQuery}" />
		<property name="testConnectionOnCheckout" value="${sobek.dataSource.testConnectionOnCheckout}" />
		<property name="acquireRetryAttempts" value="${sobek.dataSource.acquireRetryAttempts}" />
		<property name="breakAfterAcquireFailure" value="${sobek.dataSource.breakAfterAcquireFailure}" />
		<property name="unreturnedConnectionTimeout"
			value="${sobek.dataSource.unreturnedConnectionTimeout}" />
		<property name="debugUnreturnedConnectionStackTraces"
			value="${sobek.dataSource.debugUnreturnedConnectionStackTraces}" />
	</bean>

</beans>
