<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sobek.mainPropertyConfigurer"
		class="com.despegar.framework.spring.properties.PropertyConfigurerDescriptorDiscoveryPostProcessor">
	</bean>

	<bean id="sobek.global.properties.override"
		class="com.despegar.framework.spring.properties.PropertyConfigurerDescriptor">
		<property name="applicationResources">
			<list>
				<value>classpath:conf/app/application.properties</value>
				<value>classpath:conf/app/url-generation.properties</value>
			</list>
		</property>
		<property name="environmentResources">
			<list>
				<value>classpath:conf/env/environment.properties</value>
				<value>classpath:conf/env/environment-override.properties</value>
				<value>classpath:conf/env/remoting-service.properties</value>
				<value>classpath:conf/env/location.properties</value>
				<value>classpath:conf/env/url-generation.properties</value>
			</list>
		</property>
		<property name="order"
			value="#{T(org.springframework.core.Ordered).LOWEST_PRECEDENCE}" />
	</bean>
</beans>