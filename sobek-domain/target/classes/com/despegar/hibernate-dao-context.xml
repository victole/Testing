<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Basics -->
	<import resource="classpath:com/despegar/db/hibernate-context.xml" />

	<!-- Abstract DAO -->
	<bean id="abstractHibernateDao" abstract="true">
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="hibernateTemplate.flushModeName" value="FLUSH_AUTO" />
		<property name="hibernateTemplate.cacheQueries" value="true" />
	</bean>

	<bean id="pictureSizeDAO"
		class="com.despegar.framework.persistence.hibernate.dao.generic.GenericReadWriteObjectWLDDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.PictureSize" />
	</bean>

	<bean id="benefitDAO" class="com.despegar.sobek.dao.BenefitDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Benefit" />
	</bean>

	<bean id="benefitIndexDAO" class="com.despegar.sobek.dao.BenefitIndexDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Benefit" />
	</bean>

	<bean id="benefitCategoryDAO" class="com.despegar.sobek.dao.BenefitCategoryDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.BenefitCategory" />
	</bean>
	
	<bean id="companyDAO" class="com.despegar.sobek.dao.CompanyDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Company" />
	</bean>
	
	<bean id="contactDAO" class="com.despegar.framework.persistence.hibernate.dao.generic.GenericReadWriteObjectDAO" parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Contact"/>
	</bean>
	
	<bean id="pictureDAO" class="com.despegar.framework.persistence.hibernate.dao.generic.GenericReadWriteObjectDAO" parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Picture"/>
	</bean>

	<bean id="benefitStatusDAO" class="com.despegar.sobek.dao.BenefitStatusDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.BenefitStatus" />
	</bean>

	<bean id="brandDAO" class="com.despegar.sobek.dao.BrandDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Brand" />
	</bean>

	<bean id="productDAO" class="com.despegar.sobek.dao.ProductDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Product" />
	</bean>
	
	<bean id="geoAreaDAO" class="com.despegar.sobek.dao.GeoAreaDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.GeoArea" />
	</bean>

	<bean id="languageDAO" class="com.despegar.sobek.dao.LanguageDAO"
		parent="abstractHibernateDao">
		<property name="clazz" value="com.despegar.sobek.model.Language" />
	</bean>

</beans>
